<% layout('/layouts/boilerplate') %>

<div class="row">
    <div class="col-6 offset-3">
        <div class="card">
            <img class="card-img-top w-100" style="height: auto;" src="<%= campground.image %>" alt="Card image cap">
            <div class="card-body">
                <h5 class="card-title"><%= campground.title %></h5>
                <p class="card-text"><%= campground.description %></p>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item text-muted">location: <%= campground.location %></li>
                <li class="list-group-item">$<%= campground.price %>/night</li>
            </ul>
            <div class="card-body">
                <a href="/campgrounds/<%=campground._id%>/edit" class="card-link btn btn-primary">Edit</a>
                <form class="d-inline" action="/campgrounds/<%= campground._id %>?_method=DELETE" method="post">
                    <button class="btn btn-danger" >Delete</button>
                </form>
            </div>
            <div class="card-footer text-muted">
                2 days ago <a href="/campgrounds">All Campgrounds</a>
            </div>
        </div>
        <h2>Leave a Review</h2>
        <form action="/campgrounds/<%= campground._id %>/reviews" method="post" class="mb-3">
            <div class="mb-3">
                <label for="rating" class="form-label">Rating</label>
                <input type="range" name="review[rating]" id="rating" min="1" max="5" class="form-range">
            </div>
            <div class="mb-3">
                <label for="body" class="form-label">Review: </label>
                <textarea name="review[body]" id="body" cols="30" rows="3" class="form-control"></textarea>
            </div>
            <button type="button" class="btn btn-success">Submit</button>
        </form>
    </div>
</div>

